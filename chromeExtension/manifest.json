{
    "manifest_version": 3,
    "name": "BetterRust+ Extensions",
    "description": "Necessary to connect the BetterRust+ bot to a Rust / Steam account",
    "version": "1.0",
    "action": {
        "default_icon": "icons/default.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "https://companion-rust.facepunch.com/*"
          ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "scripts/tokenCatcher.js"
            ],
            "matches": [
                "https://companion-rust.facepunch.com/*"
            ]
        }
    ]
}